{
	"compileOnSave": false,
    "compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"baseUrl": "./",
		"types": ["primefaces"],
		"strict": true,
        "noImplicitAny": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"importHelpers": true,
        "target": "ES5",
         "module": "ES2015",
		"moduleResolution": "bundler",
		"outDir": "./dist/",
		"lib": [
			"ES2015",
			"dom"
		  ],
		"paths": {
			"*": [
			  "../@types/*",
			  "../node_modules/@types/*",
				"../node_modules/primefaces/*"
			]
		  }
	},
	"include": ["*.ts", "*.test.ts"],
	"exclude": ["node_modules"]
}